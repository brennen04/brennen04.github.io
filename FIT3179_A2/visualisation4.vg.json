{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 500,
  "height": 500,
  "title": {
    "text": "Job Vacancy Pressure by State/Territory (2024)",
    "subtitle": "Vacancy rate (%): job openings per 100 people in the labour force"
  },
  "projection": {"type": "mercator", "center": [134.5, -28], "scale": 630},
  "layer": [
    {
      "data": { "graticule": { "step": [10, 10] } },
      "mark": {
        "type": "geoshape",
        "stroke": "#b8c2cc",
        "strokeWidth": 0.6,
        "fill": null
      }
    },
    {
      "data": {
        "url": "https://cdn.jsdelivr.net/gh/rowanhogan/australian-states@master/states.geojson",
        "format": { "type": "json", "property": "features" }
      },
      "transform": [
        {
          "lookup": "properties.STATE_NAME",
          "from": {
            "data": { "url": "data/Idiom4.csv" },
            "key": "State and Territory",
            "fields": ["Labour Force", "Job Vacancies"],
            "default": null
          }
        },
        {
          "calculate": "datum['Job Vacancies'] && datum['Labour Force'] ? (datum['Job Vacancies'] / datum['Labour Force']) * 100 : null",
          "as": "Vacancy rate (%)"
        }
      ],
      "mark": { "type": "geoshape", "stroke": "white" },
      "encoding": {
        "shape": { "field": "geometry", "type": "geojson" },
        "color": {
          "field": "Vacancy rate (%)",
          "type": "quantitative",
          "title": "Vacancy Rate (%)",
          "scale": { "scheme": "blues", "unknown": "#eeeeee" },
          "legend": {
            "titleFontSize": 12,
            "labelFontSize": 12,
            "gradientLength": 200,
            "orient": "right"
          }
        },
        "tooltip": [
          { "field": "properties.STATE_NAME", "title": "State/Territory" },
          { "field": "Job Vacancies", "title": "Job vacancies", "format": ",d" },
          { "field": "Labour Force", "title": "Labour force", "format": ",d" },
          {
            "field": "Vacancy rate (%)",
            "title": "Vacancy rate (%)",
            "format": ".2f"
          }
        ]
      }
    }
  ],
  "config": {
    "view": { "stroke": null },
    "legend": { "orient": "right" },
    "axis": { "grid": false },
    "padding": { "right": 90 }
  }
}
